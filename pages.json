			"path": "pages/index/index",
			"style": {
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/tabs/list",
			"style": {
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/tabs/study",
